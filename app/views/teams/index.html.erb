<section class="index">
	<% if current_user %>
		<div class="col-sm-6 col-centered">
		  <h2 class="text-center">Here are all the teams that have played together</h2>
				<% if @teams.any? %>
					<ul>
				  <% @teams.each do |team| %>
				  	<li><%= link_to "#{team.player_one}" + " & " "#{team.player_two}", team_path(team) %> </li>
				  <% end %>
				  </ul>
				<% else %>
				  <p>No matches yet.<p>
				<% end %>
		</div>
	<% end %>