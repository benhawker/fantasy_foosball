<section class="index">
	<% if current_user %>
		<div class="col-sm-6 col-centered">
			<%= link_to "Create new match", new_match_path, class: "btn btn-primary form-control" %>
		  <h2 class="text-center">Here are the latest matchups</h2>
				<% if @matches.any? %>
					<ul>
				  <% @matches.each do |match| %>
				    <li><%= link_to match.match_name, match_path(match) %> </li>
				    <li><%= link_to "Edit #{match.match_name}", edit_match_path(match) %> </li>
				    <li><%= link_to "Delete #{match.match_name}", match_path(match), method: :delete %> </li>
				    <br>
				  <% end %>
				  </ul>
				<% else %>
				  <p>No matches yet.<p>
				<% end %>
		</div>


	<% else %>
			<div class="jumbotron absolute">
			  <h2 class="text-center">We keep track of your awesome foosball skills :)</h2>
			 	<%= link_to "Sign up", new_user_registration_path, role: "button", class: "btn btn-primary btn-lg" %>
			  <%= link_to "Sign in", new_user_session_path, role: "button", class: "btn btn-primary btn-lg pull-right" %> 
			</div>
	<% end %>
</section>
