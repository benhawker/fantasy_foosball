<div class="col-sm-6 col-centered">
  <h2 class="text-center">Create your new matchup below</h2>
	<%= form_for [@match], :html => {:multipart => true} do |f| %>
		<%= f.text_field :match_name, placeholder: "Enter Matchup Name (e.g. The Royal Rumble", class: "form-control" %>
		<%= f.label :team_one %>
		<%= f.select :team_one, Team.all.map {|team| "#{team.player_one} & #{team.player_two}"}, class: "form-control" %>
		<br>
		<%= f.label :team_two %>
		<%= f.select :team_two, Team.all.map {|team| "#{team.player_one} & #{team.player_two}"}, class: "form-control" %>
	  <%= f.submit "Create Match!", class: "form-control" %>
	<% end %>
</div>

